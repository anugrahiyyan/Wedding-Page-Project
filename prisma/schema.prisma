generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      String   @default("ADMIN") // SUPER_ADMIN, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tier {
  id          String   @id @default(cuid())
  name        String   @unique  // e.g., "Starter", "Standard", "Premium"
  priceMin    Int      // Minimum price in IDR
  priceMax    Int      // Maximum price in IDR
  features    String?  // JSON array of features, e.g., ["RSVP", "Basic Template"]
  color       String   @default("#646cff")  // Hex color for tier badge
  sortOrder   Int      @default(0)  // For display ordering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  templates   Template[]
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  thumbnail   String?  // Path to image
  content     String   // JSON structure enabling dynamic fields
  htmlContent String?  // HTML/CSS/JS template content
  isPublic    Boolean  @default(false)
  tierId      String?  // Foreign key to Tier
  tier        Tier?    @relation(fields: [tierId], references: [id])
  price       Int?     // Custom price in IDR (overrides tier range)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invoices    Invoice[]
}

model Invoice {
  id              String   @id @default(cuid())
  customerName    String
  subdomain       String   @unique
  templateId      String
  template        Template @relation(fields: [templateId], references: [id])
  templateContent String?  // Copied template JSON for this client (legacy)
  htmlContent     String?  // Custom HTML content for this specific invoice
  accessToken     String   @default(cuid()) // 6-digit token for RSVP access
  status          String   @default("ACTIVE")
  subdomainMode   String   @default("VIP")  // VIP = subdomain, BASIC = /s/path
  agreedPrice     Int?     // Fixed price deal in IDR
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  rsvpSubmissions RsvpSubmission[]
  guests          Guest[]
}

model Guest {
  id        String   @id @default(cuid())
  invoiceId String
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  name      String
  slug      String   // URL friendly ID
  token     String   @default(cuid())
  phone     String?
  status    String   @default("PENDING") // PENDING, SENT, OPENED, RSVP_YES, RSVP_NO
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([invoiceId, slug])
}

model RsvpSubmission {
  id         String   @id @default(cuid())
  invoiceId  String
  invoice    Invoice  @relation(fields: [invoiceId], references: [id])
  guestName  String
  email      String?
  attending  Boolean
  allergies  String?
  comment    String?  // Guest wishes/congratulations
  createdAt  DateTime @default(now())
}

